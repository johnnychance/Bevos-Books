@page
@{
    @using fa18Team28_FinalProject.Controllers
}

<h2>Detailed Search</h2>
<form asp-action="DisplaySearchResults" asp-controller="Home" method="get">
    <div class="form-group">
        <label>Name:</label>
        <input name="SearchString" class="form-group" />
    </div>
    <div class="form-group">
        <label>Description:</label>
        <input name="myDescription" class="form-group" />
    </div>
    <div class="form-group">
        <label>Choose a language:</label>
        @Html.DropDownList("SelectedGenre", (SelectList)ViewBag.AllGenres, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Number of stars:</label>
        <input name="StarString" class="form-control" /> <div class="text-danger">@ViewBag.Message</div>
        <label class="radio">@Html.RadioButton("Star", Classification.GreaterThan)Greater Than</label>
        <label class="radio">@Html.RadioButton("Star", Classification.LessThan)Less Than</label>
    </div>
    <div class="form-group">
        <label>Modified After:</label>
        <input type="date" name="datSelectedDate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-danger">Search</button>
</form>
