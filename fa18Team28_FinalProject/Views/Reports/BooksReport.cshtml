@model IEnumerable<fa18Team28_FinalProject.Models.Book>
@using fa18Team28_FinalProject.Controllers

<h2></h2>
<p> Displaying @ViewBag.SelectedBooks Records </p>
<h2>Sort Report</h2>
<form asp-action="DisplayBookReport" asp-controller="Reports" method="get">
    <div class="form-group">
        <label class="radio">@Html.RadioButton("Filter", BookReportClassification.RecentFirst)Recent First</label>
        <label class="radio">@Html.RadioButton("Filter", BookReportClassification.HighestProfitMargin)Hightest Profit Margin</label>
        <label class="radio">@Html.RadioButton("Filter", BookReportClassification.LowestProfitMargin)Lowest Profit Margin</label>
        <label class="radio">@Html.RadioButton("Filter", BookReportClassification.AscendingPrice)Ascending Price</label>
        <label class="radio">@Html.RadioButton("Filter", BookReportClassification.DescendingPrice)Descending Price</label>
        <label class="radio">@Html.RadioButton("Filter", BookReportClassification.MostPopular)Most Popular</label>
    </div>
</form>

    @{
        ViewData["Title"] = "View";
    }
    <h2>Books Sold Report</h2>
    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PurchaseCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Author)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cost)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Reordered)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CopiesOnHand)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastOrdered)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.PublishedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UniqueID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Reordered)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PurchaseCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CopiesOnHand)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastOrdered)
                    </td>
                    @*<td>
                        <a asp-action="Details" asp-route-id="@item.BookID">Details</a>
                    </td>*@
                </tr>
            }
        </tbody>
    </table>
