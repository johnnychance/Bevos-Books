<div>
    <table class="table table-hover table-striped table-sm">
        <thead>
            <tr>
                <th>Products</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ProductDetail pd in Model.ProductDetails)
            {
            <tr>
                <td>@pd.Book.Title</td>
                <td>@pd.Book.Price</td>
            </tr>
            }
        </tbody>
    </table>
</div>
<div>
