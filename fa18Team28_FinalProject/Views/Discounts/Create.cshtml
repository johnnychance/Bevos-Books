@model fa18Team28_FinalProject.Models.Discount
@using fa18Team28_FinalProject.Models

@{
    ViewData["Title"] = "Create";
}
<h2>Create a Discount</h2>
<h4>Promotion</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Discount Code</label>
                <input asp-for="DiscountCode" class="form-control" />
                <span asp-validation-for="DiscountCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                Select a discount type:
            </div>
            <div>
                @Html.DropDownListFor(o => o.Type, Enum.GetValues(typeof(DiscountType)).Cast<DiscountType>().Select(x => new SelectListItem { Text = x.ToString(), Value = ((int)x).ToString() }))
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
