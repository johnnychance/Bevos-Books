@model fa18Team28_FinalProject.Models.CustomerOrder
@using fa18Team28_FinalProject.Models

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerOrderID" />
           @* <div class="form-group">
                <label asp-for="CustomerOrderNumber" class="control-label"></label>:
                @Html.DisplayFor(m => m.CustomerOrderNumber, new { @class = "form-control" })
                <span asp-validation-for="CustomerOrderNumber" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="CustomerOrderDate" class="control-label"></label>:
                @Html.DisplayFor(m => m.CustomerOrderDate, new { @class = "form-control" })
                <span asp-validation-for="CustomerOrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerOrderNotes" class="control-label"></label>
                <input aspn-for="Notes" class="form-control" />
                <span asp-validation-for="CustomerOrderNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<h4>Products</h4>
<table class="table table-sm table-striped table-hover">
    <tr>
        <th>Book Title</th>
        <th>Book Author</th>
        <th>Book Price</th>
        <th>Quantity</th>
        <th>Book Extended Price</th>
    </tr>
    @foreach (CustomerOrderDetail rd in Model.CustomerOrderDetails)
    {
    <tr>
        <td>@Html.DisplayFor(modelItem => rd.Book.Title)</td>
        <td>@Html.DisplayFor(modelItem => rd.Book.Author)</td>
        <td>@Html.DisplayFor(modelItem => rd.ProductPrice)</td>
        <td>@Html.DisplayFor(modelItem => rd.Quantity)</td>
        <td>@Html.DisplayFor(modelItem => rd.ExtendedPrice)</td>
    </tr>
    }
</table>

<div>
    <a asp-action="AddToOrder" asp-route-id="@Model.CustomerOrderID" class="btn btn-primary">Add Another Item</a>
    <a asp-action="RemoveFromOrder" asp-route-id="@Model.CustomerOrderID" class="btn btn-primary">Edit Existing Items</a>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
